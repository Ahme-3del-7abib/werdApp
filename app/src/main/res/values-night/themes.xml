<resources>

    <style name="Theme.Werd" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/green_i</item>
        <item name="colorAccent">@color/green_i</item>
        <item name="colorPrimary">@color/green_i</item>
        <item name="android:statusBarColor">@color/green_i</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="main_overlay_alpha">
        <item name="android:alpha">0.8</item>
    </style>

    <style name="main_text_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginRight">@dimen/text_margin_right</item>
        <item name="android:gravity">center|right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/grey_i</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="main_image_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/image_margin_right</item>
    </style>

    <style name="main_hi_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_line_view_style">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">right|center</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/line_green_bg</item>
    </style>

    <style name="main_card_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="cardCornerRadius">@dimen/_8sdp</item>
        <item name="cardElevation">@dimen/_4sdp</item>
        <item name="android:layout_gravity">right|center</item>
        <item name="android:layout_marginRight">@dimen/card_view_margin_right</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/border_two_side_top_white</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="tabTextAppearance">?android:textAppearanceLarge</item>
        <item name="minWidth">@dimen/_100sdp</item>
    </style>

</resources>